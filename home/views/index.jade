extends ../../layouts/layout

block content
  h1= title
  div(ng-controller='stepStoneController')     
    modal-dialog(show='modalShown', width='500px', dialog-title='', on-close='logClose()')
      form.pure-form.pure-form-aligned(ng-submit='editUser(currentuser)')
        fieldset
          .pure-control-group
            label(for='POST-username') Username:
            input#POST-username(type='text', ng-model='username', value='{{currentuser.username}}', placeholder='{{currentuser.username}}')
          .pure-control-group
            label(for='POST-email') Email:
            input#POST-email(type='text', ng-model='email', value='{{currentuser.email}}', placeholder='{{currentuser.email}}')
          .pure-control-group
            label(for='POST-password') Password:
            input#POST-password(type='password', ng-model='password', value='{{currentuser.password}}', placeholder='{{currentuser.password}}')
          .pure-controls
            button.pure-button.pure-button-primary(type='submit') Save User changes

    #main-container
      #main.wrapper.clearfix
        article
          header
            div(x-ng-repeat="user in users")
              .tile
                h1 article header h1
                p {{user.username}}
                button.pure-button.pure-button-primary(ng-click='toggleModal(user)') Edit
        
