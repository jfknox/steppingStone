doctype html
html(data-ng-app='steppingStone')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='A layout example that shows off a responsive product landing page.')
    link(rel="stylesheet", href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-old-ie-min.css")
    link(rel="stylesheet", href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css")
    link(rel='stylesheet', href='/stylesheets/angularModal.css')        
    link(rel="stylesheet", href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css")
    link(rel="stylesheet", href='/stylesheets/marketing.css')  
    link(rel='stylesheet', href='/stylesheets/style.css')

    title
    
  body
    .header
    .home-menu.pure-menu.pure-menu-open.pure-menu-horizontal.pure-menu-fixed
        a.pure-menu-heading(href='#/home') Stepping Stone
        ul
            if user
                li
                    a(href='#/resumes') Resumes
                li
                    a(href='#/profile') Profile
                li
                    a(href='/auth/signout') Signout
            else
                li
                    a(href='#/resumes') Resumes
                li
                    a(href='/auth/linkedin') Sign in with Linkedin


   

    //-block content
    .view-container
      .view-frame(ng-view)

       
    script(src="http://platform.linkedin.com/in.js" type="text/javascript")
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.24/angular.js" type='text/javascript')
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.24/angular-cookies.min.js" type='text/javascript')
    script(src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.24/angular-route.min.js" type='text/javascript')
    script(src='/javascripts/angularModal.js', type='text/javascript')
    script(src='/javascripts/app.js', type='text/javascript')
    script(src='/javascripts/home/controllers.js', type='text/javascript')
    script(src='/javascripts/linkedin/factories.js', type='text/javascript')
    script(src='/javascripts/comments/factories.js' , type='text/javascript')
    script(src='/javascripts/users/controllers.js', type='text/javascript')
    script(src='/javascripts/resumes/controllers.js', type='text/javascript')
    script(src='/javascripts/resumes/factories.js' , type='text/javascript')

    
 
 

