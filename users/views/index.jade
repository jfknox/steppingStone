extends ../layout

block content
  h1 Listing users
    #main-container
      #main.wrapper.clearfix
        table
            thead
              tr
                th Username
                th Email
                th Password
                th(colspan='3')
            tbody
              each user in users
                tr
                  td= user.username
                  td= user.email
                  td= user.password
                  td
                    a(href='/users/#{user.id}') Show
                  td
                    a(href='/users/edit/#{user.id}') Edit
                  td
                    //-Added a class to all destory links to make it easy to grab them all at once
                    //-Because jquery (and clientside js in general) does not have access to the user object,
                    //-We have to place the user data as data-attributes on the achor link
                    a.destroyLink(href='#' data-id='#{user.id}') Destroy
          a(href='/users/add') Add
