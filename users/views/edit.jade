extends ../layout

block content
	form(action='/users/edit/#{user.id}', method='post')
		label(for='POST-username') Username:
		input#POST-username(type='text', name='username', value='#{user.username}')
		br
		label(for='POST-email') Email:
		input#POST-email(type='text', name='email', value='#{user.email}')
		br
		label(for='POST-password') Password:
		input#POST-password(type='password', name='password', value='#{user.password}')
		br
		input(type='submit', value='Save')
